{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@portfolio/chat-contract": ["./packages/chat-contract/src"],
      "@portfolio/chat-data": ["./packages/chat-data/src"],
      "@portfolio/chat-orchestrator": ["./packages/chat-orchestrator/src"],
      "@portfolio/chat-preprocess-cli": ["./packages/chat-preprocess-cli/src"],
      "@portfolio/chat-next-ui": ["./packages/chat-next-ui/src"],
      "@portfolio/chat-next-api": ["./packages/chat-next-api/src"],
      "@portfolio/github-data": ["./packages/github-data/src"]
    },
    "target": "ES2017"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
